extends layout

block content
  section.hero
    header.hero__header
      h2.hero__title
        a(href=`/${owner.username}/${list.slug}`)= list.title
      ul.list-reset.flex.justify-center.mt-3
        li.mr-3
          a(href=`/${owner.username}`) 
            | by #{owner.username}
        if (user && list.owner.equals(user._id))
          li.mr-3
            a(href=`/lists/remove/${owner.username}/${list.slug}`)
              | Remove List
    if (user && list.owner.equals(user._id))
      a(href=`/${owner.username}/${list.slug}/add`).hero__action Add to List
  section.posts
    each post in list.posts
      article.overflow-hidden.border-grey-light.border-b.flex.p-4.items-center.bg-white
        //- a(class='block w-12 h-12 flex-none bg-cover rounded-full' style=`background-image: url(${post.meta.image || post.meta.logo})` href=`${post.meta.url}` title=`${post.meta.title}`)
        section.flex-grow.pr-4
          h3.pb-1.font-semibold.tracking-tight
            a(href=`${post.meta.url}`)= post.meta.title
          cite.text-sm
            a(href=`${post.meta.url}`)= h.formatUrl(post.meta.url)
        section.flex-none
          ul.list-reset.text-xs.flex.text-grey-dark
            if (user && list.owner.equals(user._id))
              li.mr-3
                a(href=`/${owner.username}/${list.slug}/remove/${post._id}`)
                  | &times
          